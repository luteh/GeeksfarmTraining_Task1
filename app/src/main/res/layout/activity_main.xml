<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.task1.MainActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="income"
            android:textIsSelectable="true"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_outcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_outcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="outcome"
            android:textIsSelectable="true"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:id="@+id/linLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance : "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Val"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:src="@drawable/insertbtn"
            app:backgroundTint="@android:color/white"
            app:fabSize="normal" />

        <Button
            android:id="@+id/clear"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:text="Delete"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="24sp" />
    </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_light">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:id="@+id/btn_1"
                    android:background="@android:color/holo_blue_light"
                    android:paddingBottom="23dp"
                    android:paddingEnd="56dp"
                    android:paddingStart="56dp"
                    android:paddingTop="23dp"
                    android:text="1"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_2"
                    android:background="@android:color/holo_blue_light"
                    android:paddingBottom="23dp"
                    android:paddingEnd="56dp"
                    android:paddingStart="56dp"
                    android:paddingTop="23dp"
                    android:text="2"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_3"
                    android:background="@android:color/holo_blue_light"
                    android:paddingBottom="23dp"
                    android:paddingEnd="56dp"
                    android:paddingStart="56dp"
                    android:paddingTop="23dp"
                    android:text="3"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:id="@+id/btn_4"
                    android:background="@android:color/holo_blue_light"
                    android:paddingBottom="23dp"
                    android:paddingEnd="56dp"
                    android:paddingStart="56dp"
                    android:paddingTop="23dp"
                    android:text="4"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_5"
                    android:background="@android:color/holo_blue_light"
                    android:paddingBottom="23dp"
                    android:paddingEnd="56dp"
                    android:paddingStart="56dp"
                    android:paddingTop="23dp"
                    android:text="5"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_6"
                    android:background="@android:color/holo_blue_light"
                    android:paddingBottom="23dp"
                    android:paddingEnd="56dp"
                    android:paddingStart="56dp"
                    android:paddingTop="23dp"
                    android:text="6"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:id="@+id/btn_7"
                    android:background="@android:color/holo_blue_light"
                    android:paddingBottom="23dp"
                    android:paddingEnd="56dp"
                    android:paddingStart="56dp"
                    android:paddingTop="23dp"
                    android:text="7"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_8"
                    android:background="@android:color/holo_blue_light"
                    android:paddingBottom="23dp"
                    android:paddingEnd="56dp"
                    android:paddingStart="56dp"
                    android:paddingTop="23dp"
                    android:text="8"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_9"
                    android:background="@android:color/holo_blue_light"
                    android:paddingBottom="23dp"
                    android:paddingEnd="56dp"
                    android:paddingStart="56dp"
                    android:paddingTop="23dp"
                    android:text="9"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:id="@+id/btn_0"
                    android:layout_column="1"
                    android:background="@android:color/holo_blue_light"
                    android:paddingBottom="23dp"
                    android:paddingEnd="56dp"
                    android:paddingStart="56dp"
                    android:paddingTop="23dp"
                    android:text="0"
                    android:textSize="18sp" />
                <Button
                    android:id="@+id/btn_c"
                    android:background="@android:color/holo_blue_light"
                    android:paddingBottom="23dp"
                    android:paddingEnd="56dp"
                    android:paddingStart="56dp"
                    android:paddingTop="23dp"
                    android:text="C"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>
</LinearLayout>
